@{
    ViewData["Title"] = "Wards";
}

<h2>Wards</h2>
<div>
    <table id="grid"></table>
    <div id="pager"></div>
</div>

@section scripts {
    <script>
        $(function () {
            $("#grid").jqGrid
                ({
                    url: "/Ward/GetDataGrid",
                    datatype: 'json',
                    mtype: 'Get',
                    colModel: [
                        { label: "Code", name: "code" },
                        { label: "Name", name: "name" },
                        { label: "Level Name", name: "levelName" },
                        { label: "District Code", name: "district.code" },
                        { label: "District Name", name: "district.name" },
                        { label: "Province Code", name: "province.code" },
                        { label: "Province Name", name: "province.name" }
                    ],
                    pager: jQuery('#pager'),
                    height: '100%',
                    autowidth: true,
                    rowNum: 10,
                    rowList: [10, 20, 30, 50],
                    viewrecords: true
                })
        });
    </script>
}
